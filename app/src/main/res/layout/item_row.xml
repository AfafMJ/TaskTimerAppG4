<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cellRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:layout_margin="3dp"
        android:background="@drawable/custom_cell_bg">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llNameDescription"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNameSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@color/themed_purple"
                    android:textSize="22dp"
                    app:autoSizeMinTextSize="10sp"
                    app:autoSizeTextType="uniform" />

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Description"
                    android:textSize="16dp"
                    app:autoSizeMinTextSize="9sp"
                    app:autoSizeTextType="uniform" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvTimeSmall"
                android:layout_width="99dp"
                android:layout_height="44dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_time_bg"
                android:padding="9dp"
                android:text="00:00"
                android:textAlignment="center"
                android:textColor="@color/teal_700"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDelete"
            android:layout_width="59dp"
            android:layout_height="59dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="11dp"
            android:layout_weight="1"
            android:background="@drawable/bt2"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:backgroundTint="@null"
            app:icon="@android:drawable/ic_menu_delete"
            app:iconTint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="SpeakableTextPresentCheck" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEdit"
            android:layout_width="59dp"
            android:layout_height="59dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="11dp"
            android:layout_toStartOf="@+id/btnDelete"
            android:layout_weight="1"
            android:background="@drawable/bt1"
            android:paddingLeft="18dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:backgroundTint="@null"
            app:icon="@drawable/ic_edit"
            app:iconTint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="SpeakableTextPresentCheck" />

    </RelativeLayout>
</LinearLayout>